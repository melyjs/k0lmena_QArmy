{
  "compilerOptions": {
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": ".",
    "types": ["node", "playwright/test"]
  },
  "include": ["src/**/*"]
}
